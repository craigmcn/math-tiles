{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "array-bracket-spacing": ["error", "always"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "no-multi-spaces": ["error"],
        "no-console": "warn",
        "comma-dangle": ["error", "always-multiline"],
        "arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }]
    }
}
